#!/usr/bin/env bash
logDosyasi="$1"
if [[ -e "$logDosyasi" ]]; then
    exec 3>&1 1>"$logDosyasi" 2>&1
else
    exec 3>&1 2>&1
fi

trap 'echo "${FUNCNAME-main} $LINENO. satÄ±rda [${BASH_COMMAND}] komutu ($?) kodu ile hata verdi." >&3' ERR
trap '{ set +x; } 2>/dev/null; echo -n "[$(date -Is)]  "; set -x' DEBUG
